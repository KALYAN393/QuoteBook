* {
margin: 0;
padding: 0;
box-sizing: border-box;
font-family: sans-serif;
}
header {
display: flex;
justify-content: space-around;
align-items: center;
padding: 10px 10px 5px 10px;
border-bottom: 1px solid rgba(219, 219, 219, 1);
}
.logo {
padding-right: 3rem;
}
header nav ul {
display: flex;
list-style: none;
}
header nav ul li {
margin-right: 22px;
font-size: 18px;
}
header nav ul li .link-secondarysmooth {
text-decoration: none;
color: black;
}
.form {
background-color: #008cba;
}
section {
padding: 30px 18%;
background-color: #fafafa;
display: flex;
}
.left-side {
width: 65%;
}
.posts {
background-color: white;
border: 1px solid rgba(219, 219, 219, 1);
border-radius: 11px;
margin-bottom: 2rem;
}
.posts-title {
padding: 16px;
}
.posts-content {
background-image: url(<%=asset_path"bg.png"%>);
color: white;
width: 100%;
height: 100%;
object-fit: cover;
}
.posts-content-text {
padding: 10rem 10rem;
}
.posts-content-text-p {
text-align: center;
font-size: 2rem;
font-family: sans-serif;
}
.post-actions {
margin-bottom: 1rem;
}
a {
text-decoration: none;
font-variation-settings: "FILL" 1, "wght" 800, "GRAD" 0, "opsz" 48;
color: #a0d995;
margin-bottom: 10px;
}
a:hover {
color: grey;
}
a.active {
color: green;
}
.posts-footer-time {
color: grey;
font-size: small;
margin-top: 10px;
}
.right-side {
width: 20%;
position: fixed;
right: 16rem;
}
.stories {
background-color: white;
border: 1px solid rgba(219, 219, 219, 1);
border-radius: 3px;
padding: 15px;
}
.stories-contents {
display: flex;
justify-content: flex-start;
align-items: center;
padding-top: 1rem;
padding-left: 0.5rem;
}
.image {
margin-right: 0.5rem;
}
.image-rb {
border-radius: 50%;
border: 5px solid rgb(21, 198, 89);
}
.comment-display {
margin-top: 13px;
margin-bottom: 5px;
}
.post-comment {
border-top: 1px solid rgba(219, 219, 219, 1);
}
.posts-tags{
margin-top:5px
}
.post-middle{
padding: 10px
}
