<div class="Registration" style="display:flex;padding-top:10%;padding-left:20%;padding-right:15%;background: rgb(46,125,171);
background: linear-gradient(132deg, rgba(46,125,171,0.8954175420168067) 0%, rgba(57,190,34,1) 100%);">
<div class="middle" style="display:flex;width:90%;height:600px">
<div class="img-registration" style="border-radius: 15px;"><%= image_tag "homelogo.png",style: 'border-radius: 18px;height:600px;width:700px'%> 
</div>
<div class="Login" style="width:100%;padding-left:15px;padding-top:10%;border-radius: 18px;color:white;background: rgb(57,190,34);
background: linear-gradient(132deg, rgba(57,190,34,1) 0%, rgba(46,155,171,1) 57%);">
<h2 style="padding-bottom:14px;">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name),html: { style: 'padding-top:10px;'}) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" ,style: "padding:2px 8px;"%>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>
</div>
</div>
